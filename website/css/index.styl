
@import 'nib'

* {
  box-sizing: border-box;
}

body {
  font-family: Source Code Pro, monospace;
  font-size: calc(.875rem - 1px);
  color: #333;
  margin: 0;
  text-size-adjust: 100%;
}

h2, h3, p {
  margin: 1.5rem 0;
  line-height: 1.5;
}

h2, h3 {
  font-weight: 600;
  letter-spacing: .03125rem;
  text-transform: uppercase;
  color: #555;
}

h2 {
  font-size: 1.75rem;
}

a {
  text-decoration: none;
  font-weight: 600;
  color: #4a90e2;
  cursor: pointer;
}

a:hover {
  text-decoration: underline;
}

a:hover {
  text-decoration: underline;
}

pre.code {
  display: block;
  margin: 1.5rem 0;
  padding: 1rem;
  background-color: #f5f5f5;
  overflow: auto;
  -webkit-overflow-scrolling: touch;

  code {
    font: inherit;
    line-height: 1.5;
  }
}

.center {
  text-align: center;
}

.container {
  margin: .5rem auto;
  max-width: 40rem;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

  .bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, .9);
  }
  h1 {
    position: relative;
  }
  .topbar {
    position: relative;
    display: inline-block;
    height: auto;
    background: none;

    &.opened {
      background-color: #4a90e2;
    }
  }
  .topbar-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #4a90e2;
  }
  .topbar-container {
    display: inline-block;
    overflow: hidden;
  }
  .topbar-menuitem {
    position: relative;
    padding: .75rem 1rem;
    &:not(:nth-child(1)) {
      margin-top: -.5rem;
    }
  }
}

h1 {
  font: inherit;
  font-weight: 400;
  color: #4a90e2;
  margin: 1rem;
  cursor: pointer;
}

b {
  font-weight: 600;
}

.topbar {
  background-color: #4a90e2;
  color: #fff;
}

.topbar-menu {
  display: inline-block;
}

.topbar-menuitem {
  padding: .75rem 1rem;
  cursor: pointer;

  &:hover {
    background-color: #fff;
    color: #4a90e2;
    box-shadow: inset 0 0 0 .25rem #4a90e2;
  }

  i, p {
    line-height: 1.5rem;
  }

  i + p {
    margin-left: .75rem;
  }

  p {
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: .03125rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.5rem;
  }
}

.content {
  padding: 0 1rem;
}

@media (max-width: 640px) {
  html {
    font-size: 75%;
  }
}

@media (min-width: 1600px) {
  html {
    font-size: 125%;
  }
}
