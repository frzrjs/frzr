{
  "name": "frzr",
  "version": "0.18.2",
  "description": "Turboboosted 2 KB view library",
  "main": "dist/frzr.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "dev": "node watch",
    "deploy": "gh-pages -d dist",
    "build": "npm run test && npm run build-js && npm run uglify",
    "build-js": "rollup -n frzr -f umd src/index.js -o dist/frzr.js",
    "build-website": "npm run build-website-css && npm run build-website-js && npm run uglify-website-js",
    "build-website-css": "stylus -c -u nib website/css/index.styl -o dist/css/main.css",
    "build-website-js": "rollup -c -f iife website/js/index.js -o dist/js/main-dev.js",
    "uglify-website-js": "uglifyjs dist/js/main-dev.js -cmo dist/js/main.js",
    "uglify": "uglifyjs dist/frzr.js -cmo dist/frzr.min.js",
    "postversion": "git push --tags",
    "prepublish": "npm test",
    "postpublish": "npm run deploy",
    "test": "rollup -n frzr -f cjs src/index.js -o test/frzr.js && browserify -t coverify test/index.js | tape-run | coverify",
    "justtest": "browserify -t coverify test/index.js | tape-run | coverify"
  },
  "author": "Juha Lindstedt",
  "license": "ISC",
  "devDependencies": {
    "browserify": "~13.0.0",
    "chokidar-cli": "~1.2.0",
    "coverify": "~1.4.1",
    "frzr-dom": "0.0.9",
    "gh-pages": "~0.11.0",
    "nib": "~1.1.0",
    "rollup": "~0.26.2",
    "rollup-plugin-buble": "~0.7.0",
    "stylus": "~0.54.5",
    "tape": "~4.5.1",
    "tape-run": "~2.1.3",
    "uglify-js": "~2.6.2"
  }
}
